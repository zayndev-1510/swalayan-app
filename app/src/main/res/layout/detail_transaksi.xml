<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context=".user.DetailTransaksi"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:ignore="UselessLeaf">
        <LinearLayout
            android:orientation="vertical"
            android:backgroundTint="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="UselessParent">
                <LinearLayout
                    android:background="#11366A"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                    <LinearLayout
                        android:id="@+id/btn_back_dashboard"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_baseline_keyboard_arrow_left_24"
                            android:padding="10dp"
                            android:fontFamily="@font/poppins_medium"
                            android:backgroundTint="@color/white"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />
                        <TextView
                            android:layout_width="match_parent"
                            android:textColor="@color/white"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content"
                            android:text="Kembali"
                            android:padding="10dp"
                            android:fontFamily="@font/poppins_medium"
                            android:backgroundTint="@color/white"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txt_detail_nomor_transaksi"
                            android:text="Nomor Transaksi : DJASLDJAL4LJ42234"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:padding="10dp"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="-80dp"
                    android:orientation="vertical"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:cardElevation="50dp"
                    app:cardBackgroundColor="#242529"
                    app:cardCornerRadius="20dp">
                    <LinearLayout
                        android:padding="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_marginEnd="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_weight="1"
                                android:text="Tanggal"
                                android:textColor="@color/white"
                                android:padding="5dp"
                                android:textSize="15sp"
                                android:fontFamily="@font/poppins_medium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:ignore="HardcodedText" />
                            <TextView
                                android:id="@+id/txt_detail_transaksi_tgl"
                                android:layout_weight="1"
                                android:text="12 November 2020"
                                android:padding="5dp"
                                android:textColor="@color/white"
                                android:textAlignment="textEnd"
                                android:textSize="15sp"
                                android:fontFamily="@font/poppins_medium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:ignore="HardcodedText" />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_marginEnd="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_weight="1"
                                android:text="Total Pembelian"
                                android:textColor="@color/white"
                                android:padding="5dp"
                                android:textSize="15sp"
                                android:fontFamily="@font/poppins_medium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:ignore="HardcodedText" />
                            <TextView
                                android:id="@+id/txt_detail_transaksi_total"
                                android:layout_weight="1"
                                android:text="Rp. 300.000"
                                android:padding="5dp"
                                android:textColor="@color/white"
                                android:textAlignment="textEnd"
                                android:textSize="15sp"
                                android:fontFamily="@font/poppins_medium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:ignore="HardcodedText" />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_marginEnd="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_weight="1"
                                android:text="Total Produk"
                                android:padding="5dp"
                                android:textSize="15sp"
                                android:textColor="@color/white"
                                android:fontFamily="@font/poppins_medium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:ignore="HardcodedText" />
                            <TextView
                                android:id="@+id/txt_detail_transaksi_jumlah_total_produk"
                                android:textColor="@color/white"
                                android:layout_weight="1"
                                android:text="50 Jumlah"
                                android:padding="5dp"
                                android:textAlignment="textEnd"
                                android:textSize="15sp"
                                android:fontFamily="@font/poppins_medium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:ignore="HardcodedText" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcy_transaksi"
                        android:padding="10dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>