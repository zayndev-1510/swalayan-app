<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/linear_layout_transaksi"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:elevation="20dp"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:paddingBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent"
            android:baselineAligned="false">
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/cornet_date"
                android:orientation="vertical"
                android:layout_width="60dp"
                android:gravity="center"
                android:layout_height="60dp"

                tools:ignore="UselessParent">
                <TextView
                    android:id="@+id/row_date"
                    android:textAlignment="center"
                    android:text="20"
                    android:padding="10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:id="@+id/row_month"
                    android:layout_marginTop="-30dp"
                    android:text="Juni"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="0"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                tools:ignore="InefficientWeight">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/row_nomor_transaction"
                            android:text="TAR001111122"
                            android:padding="10dp"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_width="wrap_content"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            tools:ignore="HardcodedText" />
                        <TextView
                            android:id="@+id/row_total"
                            android:layout_marginTop="-20dp"
                            android:text="Rp. 300.000"
                            android:padding="10dp"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_width="wrap_content"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="48dp"
                            android:layout_height="45dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/ic_baseline_keyboard_arrow_right_24" />
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <View
            android:background="#CCC"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="3dp"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>