<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent"
        android:baselineAligned="false">
        <LinearLayout
            android:layout_weight="0"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            tools:ignore="InefficientWeight">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/row_nama_barang_cart"
                        android:text="Aqua 600 Mil"
                        android:padding="10dp"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:id="@+id/row_harga_cart"
                        android:layout_marginTop="-20dp"
                        android:text="1 x 300.000"
                        android:padding="10dp"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
                <LinearLayout
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/btn_kurang_jumlah"
                        android:text="-"
                        android:fontFamily="@font/poppins_medium"
                        android:textAlignment="center"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:background="@drawable/border_btn_plus_negatif"
                        android:padding="5dp"
                        android:backgroundTint="#CCC"
                        tools:ignore="HardcodedText" />
                    <EditText
                        android:id="@+id/jml_input"
                        android:hint="1"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_medium"
                        tools:ignore="HardcodedText"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:padding="10dp"
                        android:background="@drawable/no_border"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        android:importantForAutofill="no" />
                    <TextView
                        android:id="@+id/btn_tambah_jumlah"
                        android:background="@drawable/border_btn_plus_negatif"
                        android:text="+"
                        android:backgroundTint="#063970"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_width="40dp"
                        android:padding="5dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <View
        android:background="#CCC"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_width="wrap_content"
        android:layout_height="3dp"/>
</LinearLayout>