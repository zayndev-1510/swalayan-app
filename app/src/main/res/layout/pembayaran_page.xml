<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.NotifPembayaran"
    android:background="#CCC"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp">
            <ImageView
                android:scaleType="center"
                android:id="@+id/imagebarcode"
                android:layout_width="350dp"
                android:layout_height="300dp"
                tools:ignore="ContentDescription" />
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_loading"
                android:layout_width="150dp"
                app:lottie_rawRes="@raw/success"
                app:lottie_autoPlay="true"
                app:lottie_speed="1.25"
                android:visibility="gone"
                app:lottie_loop="false"
                android:layout_height="150dp">
            </com.airbnb.lottie.LottieAnimationView>
            <TextView
                android:id="@+id/ket_loading"
                android:textStyle="bold"
                android:padding="10dp"
                android:textAlignment="textStart"
                android:fontFamily="@font/poppins_medium"
                android:text="1. Lakukan proses pembayaran dikasir dengan memberikan qrcode kepada kasir"
                android:layout_width="match_parent"
                android:justificationMode="inter_word"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText,UnusedAttribute" />
            <TextView
                android:id="@+id/ket_loading2"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_marginTop="-20dp"
                android:textAlignment="textStart"
                android:fontFamily="@font/poppins_medium"
                android:text="2.Setelah proses transaksi pembayaran selesai silakan klik tombol selesai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                tools:ignore="HardcodedText,UnusedAttribute" />
            <TextView
                android:id="@+id/btn_selesai"
                android:textStyle="bold"
                android:padding="10dp"
                android:textSize="17sp"
                android:background="@drawable/border_btn_plus_negatif"
                android:textAlignment="center"
                android:backgroundTint="#d94d7e"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_medium"
                android:text="Selesai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>